
<div class="panel-heading">
  <h3 class="panel-title"><%= @header %></h3>
</div>
<div class="panel-body">
  <div class="form-group">
    <%= form_with(model: crypto, local: true) do |form| %>
      <% if crypto.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(crypto.errors.count, "error") %> prohibited this crypto from being saved:</h2>
    
          <ul>
          <% crypto.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="field">
        <%= form.label :crypto %><br/>
        <%= form.select :symbol , @crypto_symbols, class: "form-control" %>
      </div>
    
      <div class="field">
        
        <%= form.number_field :user_id, value: current_user.id, class: "form-control", type: "hidden" %>
      </div>
    
      <div class="field">
        <%= form.label :cost_per %>
        <%= form.number_field :cost_per, class: "form-control", step: "any"  %>
      </div>
    
      <div class="field">
        <%= form.label :amount_owned %>
        <%= form.number_field :amount_owned , class: "form-control", step: "any" %>
      </div>
    
      <div class="actions">
        <%= form.submit "Add", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
